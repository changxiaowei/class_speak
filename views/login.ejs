<body>
    <% include header.ejs %>
   <div class="chang">
        账号：<input type="text" id="text">;
        密码：<input type="password" id="password">
        <button id="btn">登陆</button>
        <p id="info"></p>
   </div>

    <script src="/js/jquery.min.js"></script>
    <script>
$('#btn').on('click',function(){
   var user = $('#text').val();
   var pass = $('#password').val();
   $.post('/dologin',{
        'username':user,
        'password':pass
   },(result)=>{
      if(result == '-1'){
        $('#p').html('');
        $('#p').html('没有该用户！')
      }else if(result == '-2'){
        $('#p').html('');
        $('#p').html('密码错误！');
      }else if(result == '1'){
       window.location = '/'
      }

   })
})
    </script>
</body>
</html>